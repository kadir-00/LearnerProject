@*@model LearnerProject.Models.Entitities.Course*@
@using LearnerProject.Models.Entitities
@model List<Course>
@{
    ViewBag.Title = "AllCourse";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="untree_co-hero overlay" style="background-image: url('images/img-school-3-min.jpg');">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-12">
                <div class="row justify-content-center ">
                    <div class="col-lg-6 text-center ">
                        <h1 class="mb-4 heading text-white" data-aos="fade-up" data-aos-delay="100">Tüm Kurslarimiz</h1>
                        <div class="mb-5 text-white desc mx-auto" data-aos="fade-up" data-aos-delay="200">
                            <p>Alanında uzman eğitmenler tarafından hazırlanan en güncel ve popüler kurslarımızı
                                keşfedin. Kendinizi geliştirmek için harika bir fırsat!</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="untree_co-section bg-light">
    <div class="container">
        <div class="row">
            @foreach (var x in Model)
            {
                <div class="col-12 col-sm-6 col-md-6 mb-4 mb-lg-0 col-lg-4" data-aos="fade-up" data-aos-delay="0">
                    <div class="staff text-center">
                        <div class="mb-4"><img src="@x.ImageUrl" alt="Image" class="img-fluid"></div>
                        <div class="staff-body">
                            <h3 class="staff-name">@x.CourseName</h3>
                            <span class="d-block position mb-4">@x.Price TL</span>
                            <p class="mb-4">@x.Description.</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
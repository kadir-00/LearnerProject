@model List<LearnerProject.Models.Entitities.Banner>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Bannerlar</h3>
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>Baslik</th>
        <th>Islemler</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>@item.BannerId</th>
            <td><img src="@item.ImageUrl" height="50" /></td>
            <td>@item.Title</td>
            <td>
                <a href="/AdminBanner/DeleteBanner/@item.BannerId" class="btn btn-outline-danger btn-sm m-1"> <i
                        class="fa fa-trash"></i> Sil</a>
                <a href="/AdminBanner/UpdateBanner/@item.BannerId" class="btn btn-outline-info btn-sm m-1"> <i
                        class="fa fa-pen"></i> Guncelle</a>
            </td>
        </tr>
    }
</table>
<a href="/AdminBanner/AddBanner" class="btn btn-outline-success"><i class="fa fa-plus m-2"></i> Ekle</a>

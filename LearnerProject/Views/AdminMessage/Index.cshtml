@model List<LearnerProject.Models.Entitities.Message>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Mesajlar</h3>
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Gonderen</th>
        <th>Email</th>
        <th>Konu</th>
        <th>Okundu Mu?</th>
        <th>Islemler</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>@item.MessageId</th>
            <td>@item.NameSurname</td>
            <td>@item.Email</td>
            <td>@item.Subject</td>
            <td>
                @if (item.IsRead == true)
                {
                    <span class="badge bg-success">Okundu</span>
                }
                else
                {
                    <span class="badge bg-danger">Okunmadi</span>
                }
            </td>
            <td>
                <a href="/AdminMessage/DeleteMessage/@item.MessageId" class="btn btn-outline-danger btn-sm m-1"> <i
                        class="fa fa-trash"></i> Sil</a>
                <a href="/AdminMessage/UpdateMessage/@item.MessageId" class="btn btn-outline-info btn-sm m-1"> <i
                        class="fa fa-pen"></i> Guncelle</a>
                <a href="/AdminMessage/ChangeIsRead/@item.MessageId" class="btn btn-outline-warning btn-sm m-1"> <i
                        class="fa fa-book-reader"></i> Durum Degistir</a>
            </td>
        </tr>
    }
</table>
<a href="/AdminMessage/AddMessage" class="btn btn-outline-success"><i class="fa fa-plus m-2"></i> Ekle</a>

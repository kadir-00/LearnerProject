@model LearnerProject.Models.Entitities.Message
@{
    ViewBag.Title = "AddMessage";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Mesaj Ekleme Sayfasi</h2>

<form method="post">

    <label>Gonderen</label>
    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
    <br />

    <label>Email</label>
    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    <br />

    <label>Konu</label>
    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
    <br />

    <label>Icerik</label>
    @Html.TextAreaFor(x => x.MessageContent, new { @class = "form-control", rows=5 })
    <br />

    <button class="btn btn-outline-primary">KAYDET</button>
</form>

@model LearnerProject.Models.Entitities.Message
@{
    ViewBag.Title = "UpdateMessage";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Mesaj Guncelleme Sayfasi</h2>

<form method="post">
    @Html.HiddenFor(x => x.MessageId)

    <label>Gonderen</label>
    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
    <br />

    <label>Email</label>
    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    <br />

    <label>Konu</label>
    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
    <br />

    <label>Icerik</label>
    @Html.TextAreaFor(x => x.MessageContent, new { @class = "form-control", rows=5 })
    <br />

    <div class="form-check">
        @Html.CheckBoxFor(x => x.IsRead, new { @class = "form-check-input" })
        <label class="form-check-label">Okundu Olarak Isaretle</label>
    </div>
    <br />

    <button class="btn btn-outline-primary">Guncelle</button>

</form>

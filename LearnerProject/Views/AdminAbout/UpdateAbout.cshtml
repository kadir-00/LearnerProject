@model LearnerProject.Models.Entitities.About
@{
    ViewBag.Title = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hakkimda Guncelleme Sayfasi</h2>

<form method="post">
    @* hiddenfor ile id'yi goruyoruz *@
    @Html.HiddenFor(x => x.AboutId)

    <label>Baslik</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />

    <label>Aciklam</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <br />

    <label>Resim</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <br />

    <label>Video Linki</label>
    @Html.TextBoxFor(x => x.VideoUrl, new { @class = "form-control" })
    <br />

    <label>Item1</label>
    @Html.TextBoxFor(x => x.Item1, new { @class = "form-control" })
    <br />

    <label>Item2</label>
    @Html.TextBoxFor(x => x.Item2, new { @class = "form-control" })
    <br />

    <label>Item3</label>
    @Html.TextBoxFor(x => x.Item3, new { @class = "form-control" })
    <br />

    <button class="btn btn-outline-primary">Guncelle</button>

</form>

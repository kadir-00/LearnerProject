@model List<LearnerProject.Models.Entitities.Course>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Course Index</h2>

@{
    int count = 0;
}

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Resim </th>
        <th>Kurs Adi</th>
        <th>Aciklama</th>
        <th>Fiyat</th>
        <th>Kategori Adi</th>

    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>    
            <th>@count</th>
            <td> <img src="@item.ImageUrl" style="height:50px;width:50px" /> </td>
            <td>@item.CourseName</td>

             @*// asagida yazdikki aciklama 50 karakterden uzunsa(?) 0 ile 50 arasindaki karakterleri yazsin degilse(:) kendisini alsin*@    
            @*<td>@(item.Description.Length>50 ? item.Description.Substring(0,50)+"..." : item.Description  )</td>*@

            <td>@item.Description</td>

            <td>@item.Price TL </td>
            <td>@item.Category.CategoryName</td> @*// iliskili oldugu icin once tablo ismi sonra sutun*@

            <td>
                @*// i icon eklemek icin*@
                <a href="/AdminCourse/DeleteCourse/@item.CourseId" class="btn btn-outline-danger"> <i class="fa fa-trash>"></i> SIL</a>
                <a href="/AdminCourse/UpdateCourse/@item.CourseId" class="btn btn-outline-danger"> <i class="fa fa-pen>"> </i> GUNCELLE</a>

            </td>
        </tr>


    }

</table>
<a href="/AdminCourse/AddCourse" class="btn btn-outline-primary">EKLE</a>

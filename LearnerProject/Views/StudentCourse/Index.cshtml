﻿@model List<LearnerProject.Models.Entitities.CourseRegister>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/StudentLayout/Index.cshtml";
    int count = 0;
}


<h3>Kayıt Olduğum Kurslarım</h3>

<div class="row">
    @foreach (var item in Model)
    {
        bool isReviewed = false;
        if (ViewBag.ReviewedCourses != null)
        {
            var reviewedList = (List<int>)ViewBag.ReviewedCourses;
            isReviewed = reviewedList.Contains(item.CourseId);
        }

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm border-0 rounded-3"
                style="overflow: hidden; background-color: #2c2f33; color: #fff;">
                <img src="@item.Course.ImageUrl" class="card-img-top" alt="@item.Course.CourseName"
                    style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title text-white">@item.Course.CourseName</h5>
                    <p class="card-text text-white-50">@item.Course.Description</p>
                </div>
                <div class="card-footer bg-transparent border-0 d-flex justify-content-between mb-2">
                    <a href="/StudentCourse/MyCourseList/@item.CourseId" class="btn btn-outline-info rounded-pill px-4">Kurs
                        İçeriği</a>

                    @if (isReviewed)
                    {
                        <button type="button" class="btn btn-secondary rounded-pill px-4" disabled>
                            Puanlandı
                        </button>
                    }
                    else
                    {
                        <button type="button" class="btn btn-warning rounded-pill px-4" data-bs-toggle="modal"
                            data-bs-target="#reviewModal-@item.CourseId">
                            Yorum Yap
                        </button>
                    }
                </div>
            </div>
        </div>

        if (!isReviewed)
        {
            <div class="modal fade" id="reviewModal-@item.CourseId" tabindex="-1" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content bg-secondary text-white">
                        <div class="modal-header border-bottom-0">
                            <h5 class="modal-title" id="exampleModalLabel">@item.Course.CourseName - Yorum Yap</h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                                aria-label="Close"></button>
                        </div>
                        <form method="post" action="/StudentCourse/SaveReview">
                            <div class="modal-body">
                                <input type="hidden" name="CourseId" value="@item.CourseId" />
                                <div class="mb-3">
                                    <label class="form-label">Puanınız</label>
                                    <select name="ReviewValue" class="form-select bg-dark text-white border-0">
                                        <option value="5">5 - Çok İyi</option>
                                        <option value="4">4 - İyi</option>
                                        <option value="3">3 - Orta</option>
                                        <option value="2">2 - Kötü</option>
                                        <option value="1">1 - Çok Kötü</option>
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Yorumunuz</label>
                                    <textarea name="Comment" class="form-control bg-dark text-white border-0" rows="4"
                                        placeholder="Deneyimlerinizi paylaşın..."></textarea>
                                </div>
                            </div>
                            <div class="modal-footer border-top-0">
                                <button type="button" class="btn btn-secondary rounded-pill"
                                    data-bs-dismiss="modal">Kapat</button>
                                <button type="submit" class="btn btn-primary rounded-pill">Yorumu Kaydet</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }
    }
</div>

<!-- Pagination Controls -->
@if (ViewBag.TotalPages > 1)
{
    <div class="d-flex justify-content-center mt-3">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link" href="/StudentCourse/Index?page=@i">@i</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
}
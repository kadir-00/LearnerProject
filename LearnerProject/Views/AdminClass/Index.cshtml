@model List<LearnerProject.Models.Entitities.ClassRoom>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Siniflar</h2>

@{
    int count = 0;
}

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Isim </th>
        <th>Icon</th>
        <th>Aciklama</th>
        @*<th>Fiyat</th>
        <th>Kategori Adi</th>*@


    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Name</td>
            <td> <img src="@item.Icon" style="height:50px;width:50px" /> </td>
            <td>@item.Description</td>


            <td>
                @*// i icon eklemek icin*@
                <a href="/AdminClass/DeleteClass/@item.ClassRoomId" class="btn btn-outline-danger btn-sm m-1"> <i
                        class="fa fa-trash"></i> Sil</a>
                <a href="/AdminClass/UpdateClass/@item.ClassRoomId" class="btn btn-outline-info btn-sm m-1"> <i
                        class="fa fa-pen"></i> Guncelle</a>
            </td>
        </tr>
    }
</table>
<a href="/AdminClass/AddClass" class="btn btn-outline-success"><i class="fa fa-plus m-2"></i> Ekle</a>

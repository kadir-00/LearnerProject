@model List<LearnerProject.Models.Entitities.Contact>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Iletisim Bilgileri</h3>
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Adres</th>
        <th>Saatler</th>
        <th>Email</th>
        <th>Telefon</th>
        <th>Islemler</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>@item.ContactId</th>
            <td>@item.Add</td>
            <td>@item.OpenHours</td>
            <td>@item.Email</td>
            <td>@item.Phone</td>
            <td>
                <a href="/AdminContact/DeleteContact/@item.ContactId" class="btn btn-outline-danger btn-sm m-1"> <i
                        class="fa fa-trash"></i> Sil</a>
                <a href="/AdminContact/UpdateContact/@item.ContactId" class="btn btn-outline-info btn-sm m-1"> <i
                        class="fa fa-pen"></i> Guncelle</a>
            </td>
        </tr>
    }
</table>
<a href="/AdminContact/AddContact" class="btn btn-outline-success"><i class="fa fa-plus m-2"></i> Ekle</a>

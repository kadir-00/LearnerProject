@model LearnerProject.Models.Entitities.Contact
@{
    ViewBag.Title = "UpdateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Iletisim Guncelleme Sayfasi</h2>

<form method="post">
    @Html.HiddenFor(x => x.ContactId)

    <label>Adres (Add)</label>
    @Html.TextBoxFor(x => x.Add, new { @class = "form-control" })
    <br />

    <label>Saatler</label>
    @Html.TextBoxFor(x => x.OpenHours, new { @class = "form-control" })
    <br />

    <label>Email</label>
    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    <br />

    <label>Telefon</label>
    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
    <br />

    <button class="btn btn-outline-primary">Guncelle</button>

</form>
